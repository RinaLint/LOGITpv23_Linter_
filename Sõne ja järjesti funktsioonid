    valik=int(input())

    if valik==1:
            a=input("Введи букву")
            slovo_list.append(a)
            print(f"Добавили {a} новый список, ",slovo_list)
    elif valik==2:
            slovo_list.extend(abc)
            print(slovo_list)
    elif valik==3:
            a=input("Введи букву, которую хочешь добавить ")
